{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es5", "es2015", "es2015.collection"],
        "outDir": "dst",
        "declaration": true,
        "declarationDir": "dst"
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}
